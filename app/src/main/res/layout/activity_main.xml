<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/take_picture_with_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="Take picture with camera" />

    <Button
        android:id="@+id/select_photo_from_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/take_picture_with_camera"
        android:layout_centerHorizontal="true"
        android:text="Select photo from gallery" />

    <TextView
        android:id="@+id/menuLanguage"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/targetLanuage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="Please select menus's language" />

    <TextView
        android:id="@+id/targetLanuage"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:padding="5dp"
        android:text="Please select your language" />


</RelativeLayout>